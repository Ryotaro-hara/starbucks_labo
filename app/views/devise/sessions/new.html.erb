<div class="container">
  <div class="card card-container">
    <h2 class="signin-title mb-4"><%= t('.sign_in') %></h2>
    <div class="form-signin mb-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p class="text-danger alert"><%= alert %></p>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control mb-3" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control mb-3" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit t('.sign_in'), class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
    <div class="devise-link">
      <p>-------------------------------------</p>
      <p>
        アカウントをお持ちではない方はこちら
        <%= link_to "新規登録する", new_user_registration_path %>
      </p>
    </div>
  </div>
</div>
