<div class="col-md-offset-2 pt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="edit-form-wrap">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="field mb-3">
            <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード(6文字以上)", class: "form-control" %>
            <p class="error-messages"><%= resource.errors.full_messages_for(:password)[0] %></P>
          </div>

          <div class="field mb-3">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
            <p class="error-messages"><%= resource.errors.full_messages_for(:password_confirmation)[0] %></P>
          </div>

          <div class="field mb-3">
            <%= f.password_field :current_password, autocomplete: "off", placeholder: "現在のパスワード", class: "form-control" %>
            <p class="error-messages"><%= resource.errors.full_messages_for(:current_password)[0] %></P>
          </div>

          <div class="actions mb-4">
            <%= f.submit "更新する" , class: "btn btn-outline-primary w-25" %>
            <%= link_to "戻る", user_path(current_user), class: "btn btn-outline-secondary w-25" %>
          </div>
        <% end %>
        <p class="text-center">
          プロフィールの変更は
          <%= link_to "こちら", edit_user_path(current_user) %>
        </p>
      </div>
    </div>
  </div>
</div>
