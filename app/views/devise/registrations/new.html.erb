<% provide(:title, "新規ユーザー作成") %>
<div class="container account-section pt-4">
  <div class="card card-container">
    <h2 class="signup-title mb-4"><%= t('.sign_up') %></h2>
    <div class="form-signup mb-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field mb-3">
          <%= f.text_field :name, autofocus: true, placeholder: "名前(20文字以内)", class: "form-control" %>
          <p class="error-messages"><%= resource.errors.full_messages_for(:name)[0] %></P>
        </div>

        <div class="field mb-3">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
          <p class="error-messages"><%= resource.errors.full_messages_for(:email)[0] %></P>
        </div>

        <div class="field mb-3">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード(6文字以上)", class: "form-control" %>
          <p class="error-messages"><%= resource.errors.full_messages_for(:password)[0] %></P>
        </div>

        <div class="field mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
          <p class="error-messages"><%= resource.errors.full_messages_for(:password_confirmation)[0] %></P>
        </div>

        <div class="actions">
          <%= f.submit t('.sign_up'), class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
    <div class="devise-link">
      <p>-------------------------------------</p>
      <p>
        アカウントをお持ちの方はこちら<br>
        <%= link_to "ログインする", new_user_session_path, class: "text-decoration-none" %>
      </p>
    </div>
  </div>
</div>
